{
  "extends": "./node_modules/gts/",
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parserOptions": {
        "jsxPragma": "h"
      },
      "rules": {
        "@typescript-eslint/no-duplicate-enum-values": "off",
        "prettier/prettier": ["error", { "endOfLine": "auto" }]
      }
    },
    {
      "files": ["gulpfile.js", "webpack.config.js"],
      "rules": {
        "node/no-unpublished-require": "off"
      }
    }
  ]
}
